{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sites list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Voie</th>
                <th>Cp</th>
                <th>Ville</th>
                <th>Responsable</th>
                <th>Degustation</th>
                <th>Achat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="{{ path('site_show', { 'id': site.id }) }}">{{ site.id }}</a></td>
                <td>{{ site.voie }}</td>
                <td>{{ site.cp }}</td>
                <td>{{ site.ville }}</td>
                <td>{{ site.responsable }}</td>
                <td>{% if site.degustation %}Yes{% else %}No{% endif %}</td>
                <td>{% if site.achat %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('site_show', { 'id': site.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('site_edit', { 'id': site.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('site_new') }}">Create a new site</a>
        </li>
    </ul>
{% endblock %}
